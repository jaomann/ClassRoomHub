@model Tuple<Guid, string>

<div class="modal fade" tab-index="-1" role="dialog" id="@Model.Item2">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Atenção!</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Fechar"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <p>Ao apagar, tudo conteudo será deletado.</p>
            </div>
            <div class="modal-footer">
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Item1">Delete</a>
            </div>
        </div>
    </div>
</div>
