@model ClassroomHub.Web.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="LoginContainer">
    <div class="login">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div>
                @Html.TextBoxFor(x => x.Email, new{Placeholder = "Email", @class="input"})
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div>
                @Html.PasswordFor(x => x.Password, new{Placeholder = "Senha", @class="input"})
                @Html.ValidationMessageFor(x => x.Birthday)
            </div>
            <div class="box-footer">
                <button type="submit">Login</button>
                <p>Não tem cadastro?<a asp-controller="Register" asp-action="Index"> Crie uma conta.</a></p>
            </div>
        </form>
    </div>
</div>
