@using System.Collections.Generic;
@using ClassroomHub.Web.ViewModels;
@model IEnumerable<CourseViewModel>;
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css"/>
@{
    ViewData["Title"] = "Cursos";
}
<div class="background">
    <div class="CourseContainer">
        <div class="Course">
            <h2 style="color: white">Cursos</h2>
            <div class="itens">
                <table class="table table-striped table-hover text-center">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Any())
                    {
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(x => course.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(x => course.Description)
                                    </td>
                                    <td>
                                        <a style="text-decoration: none; color: black;" asp-action="Edit"><i class="fa fa-edit ml-2"></i></a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" data-toggle="modal" data-target="#removeConfirmation"><i class="fa fa-trash ml-2"></i></a>
                                    </td>
                                </tr>
                                <partial name="_delete" model="course.Id"></partial>

                            }
                        </tbody>
                    }
                    else
                    {
                        <tr>
                            <td>
                                <p>Não há cursos cadastrados</p>
                            </td>
                            <td>
                                <p>Não há cursos cadastrados</p>
                            </td>
                        </tr>
                    }
                </table>
            </div>
                        <div class="partial">
                            <partial name="_create" model="new CourseViewModel()"></partial>
                        </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
}