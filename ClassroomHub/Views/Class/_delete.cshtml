@model Guid;
<div class="modal fade" id="removeConfirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="removeConfirmationlLabel">Tem certeza?</h5>
                <button type="button" class="close btn-danger" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-main alert-danger">
                <p class="ml-3 mt-1">Ao apagar a turma, não tem mais volta</p>
            </div>
            <div class="modal-footer">
                <a asp-action="Delete" asp-route-id=@Model class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>